@if (ShowSpinners)
{
    <FluentOverlay Visible="@ShowSpinners"
                   Opacity="0.4"
                   BackgroundColor="#e8f48c"
                   FullScreen="true"
                   PreventScroll=true>
        <FluentProgressRing />
    </FluentOverlay>
}

@code {
    [Parameter]
    public bool ShowSpinners { get; set; }
}
