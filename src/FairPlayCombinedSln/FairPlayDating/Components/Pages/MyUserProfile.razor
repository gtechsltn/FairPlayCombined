                    <br />
                    <em>Maximum of 1 file allowed.</em>
                </div>

                <div>
                    <br />
                    <strong>Selecting a photo will save it immediately</strong>
                </div>
            </ChildContent>
        </FluentInputFile>
    </div>
    @if (!String.IsNullOrWhiteSpace(this.ProfileImageBase64))
    {
        <div>
            <img src="@ProfileImageBase64" @ref="ProfileImagePhotoElement" />
        </div>
    }
